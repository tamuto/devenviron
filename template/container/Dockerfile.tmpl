FROM {{BASEIMG}}

RUN apt-get update && apt-get install -y \
    curl build-essential git sqlite3 \
    software-properties-common gnupg sudo iputils-ping net-tools ftp p7zip-full \
    default-mysql-client subversion ffmpeg sox jq

RUN curl -fsSL https://apt.releases.hashicorp.com/gpg | apt-key add - \
&&  apt-add-repository "deb [arch=$(dpkg --print-architecture)] https://apt.releases.hashicorp.com $(lsb_release -cs) main" \
&&  apt-get update && apt-get install terraform \
&&  apt-get clean && rm -rf /var/lib/apt/lists/* \
&&  curl "https://awscli.amazonaws.com/awscli-exe-linux-{{ARCH}}.zip" -o "awscliv2.zip" \
&&  7z x awscliv2.zip \
&&  ./aws/install \
&&  rm -rf ./aws \
&&  rm awscliv2.zip

RUN pip install \
    poetry \
    boto \
    boto3 \
    twine \
    setuptools_scm \
    python-dotenv[cli]

RUN poetry config virtualenvs.in-project true \
&&  curl "https://s3.amazonaws.com/session-manager-downloads/plugin/latest/{{SSM_ARCH}}/session-manager-plugin.deb" -o "session-manager-plugin.deb" \
&&  dpkg -i session-manager-plugin.deb \
&&  rm session-manager-plugin.deb

COPY resources/bash_aliases /root/.bash_aliases
COPY resources/ssh-aws.sh /usr/local/bin/ssh-aws.sh
COPY resources/ssh-fw-aws.sh /usr/local/bin/ssh-fw-aws.sh

ENTRYPOINT [""]
CMD ["/bin/bash"]
